{
	"compilerOptions": {
		"target": "ES2017",
		"module": "es2020",
		"moduleResolution": "node",
		"types": ["chrome"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
