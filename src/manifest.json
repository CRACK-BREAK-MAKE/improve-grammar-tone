{
	"manifest_version": 3,
	"name": "Improve Grammar & Tone",
	"version": "1.0",
	"description": "A Chrome extension to improve grammar and tone using LLMs.",
	"host_permissions": ["http://127.0.0.1:11434/*"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "assets/sparkle.png"
	},
	"icons": {
		"16": "assets/sparkle.png",
		"48": "assets/sparkle.png",
		"128": "assets/sparkle-128by128.png"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self';"
	}
}
